generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

// ------------------------------------------------------
//  User
// ------------------------------------------------------
model User {
  id        String    @id @default(cuid())
  email     String    @unique
  password  String
  createdAt DateTime  @default(now())

  todos Todo[]
}

// ------------------------------------------------------ 
// Todo 
// ------------------------------------------------------ 
model Todo { 
  id String @id @default(cuid())
  text String 
  done Boolean @default(false) 
  createdAt DateTime @default(now()) 
  date DateTime

  userId String 
  user User @relation(fields: [userId], references: [id]) 
}